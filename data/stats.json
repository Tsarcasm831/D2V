  "formulas": {
    "max_health": "base_health + (vitality * 10) + gear_health",
    "max_chakra": "base_chakra + (intelligence * 10) + gear_chakra",
    "melee_damage": "(base_weapon_damage + (strength * 2)) * (1 + gear_damage_mult)",
    "dodge_chance": "(dexterity * 0.01) + gear_dodge",
    "defense_reduction": "defense / (defense + 100)"
  },
