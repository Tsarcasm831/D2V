.footer-stat-dot-gold { width: 0.5rem; height: 0.5rem; border-radius: 9999px; background: rgba(202, 138, 4, 0.5); }
.footer-stat-dot-resonance { width: 0.5rem; height: 0.5rem; border-radius: 9999px; background: rgba(37, 99, 235, 0.5); }
.footer-status-text { font-size: 9px; font-family: 'Cinzel', serif; color: #333; letter-spacing: 0.2em; text-transform: uppercase; }

.inventory-version-footer { position: absolute; bottom: 1rem; width: 100%; display: flex; justify-content: center; gap: 2rem; pointer-events: none; user-select: none; opacity: 0.2; }
.version-text-doll { font-size: 9px; font-family: 'Cinzel', serif; color: #737373; text-transform: uppercase; letter-spacing: 0.2em; }

.doll-overlay-bg { position: fixed; inset: 0; pointer-events: none; overflow: hidden; user-select: none; }
.doll-radial-bg { position: absolute; inset: 0; background: radial-gradient(ellipse at center, #1a1a1a 0%, #050505 80%); }
.doll-gradient-bg { position: absolute; inset: 0; background: linear-gradient(to top, black, transparent, black); opacity: 0.8; }

/* Locked Slot Styling */
.locked-slot {
    background: rgba(0, 0, 0, 0.4) !important;
    border-color: rgba(255, 255, 255, 0.05) !important;
    cursor: default !important;
}

.locked-slot:hover {
    background: rgba(0, 0, 0, 0.4) !important;
    border-color: rgba(255, 255, 255, 0.05) !important;
}

.mx-4 { margin-left: 1rem; margin-right: 1rem; }
.ml-4 { margin-left: 1rem; }
.mr-4 { margin-right: 1rem; }
