    "dexterity": { "name": "Dexterity", "description": "Increases attack speed and dodge chance.", "perPoint": { "attackSpeed": 0.05, "dodge": 0.01 } },
    "intelligence": { "name": "Intelligence", "description": "Increases mana and magic power.", "perPoint": { "maxChakra": 10, "magicDamage": 2 } },
